max_temp: 130

[fan]
pin: PH6 #ar9
cycle_time: 0.010
shutdown_speed: 0
max_power: 1.0

[mcu]
serial: /dev/serial/by-id/usb-1a86_USB_Serial-if00-port0

[printer]
kinematics: cartesian
max_velocity: 300
max_accel: 3000
max_z_velocity: 5
max_z_accel: 100

[display]
lcd_type: st7920
cs_pin: PH1 #ar16
sclk_pin: PA1 #ar23
sid_pin: PH0 #ar17
encoder_pins: ^PC4, ^PC6 #^ar33, ^ar31
click_pin: ^!PC2 #^!ar35


#CRTouch Settings
[bltouch]
sensor_pin: ^PD2        #Default: ^PD3  OtherAttempts: PA7, PB7 (wwne), PB1, PA5, !PB2 (wwne), PD2 (wwne)
control_pin: PB5        #Default: PB5   OtherAttempts: PB0
probe_with_touch_mode: True
pin_up_touch_mode_reports_triggered: False
#pin_up_reports_not_triggered: True
pin_move_time: 0.68     #Default 0.400  OtherAttempts: 2.00
x_offset: -31.8 #old45 #potential-31.8 Sprite
y_offset: -40.05 #old-2 #Potential -40.05
#z_offset: #Potential 3.499 Original4.56
speed: 10 #original60
lift_speed: 20 #original 70
samples: 5      #Default: 3
sample_retract_dist: 7
samples_tolerance_retries: 3        #Default: 3
stow_on_each_sample: False
#set_output_mode: 5V

